{
  "name": "grus-t",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "compile": "tsx src/index.ts",
    "format-ir": "/opt/homebrew/opt/llvm/bin/opt -S \"src/llvm ir/ir.ll\" -o \"src/llvm ir/ir.ll\"",
    "format-temp-to-ir": "node scripts/format-temp-to-ir.js",
    "p": "node scripts/compile-and-run.js",
    "watch": "npm-watch",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "ir": "/opt/homebrew/opt/llvm/bin/lli \"src/llvm ir/ir.ll\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "npm-watch": "^0.13.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "vue": "^3.5.24"
  },
  "watch": {
    "format-temp-to-ir": {
      "patterns": [
        "src/llvm ir/temp-ir.ll"
      ],
      "extensions": "ll",
      "ignore": [
        "src/llvm ir/.formatting-temp.lock",
        "src/llvm ir/.formatting-temp.state",
        "src/llvm ir/*.tmp"
      ]
    }
  }
}
